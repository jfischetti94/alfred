<div class="tabs-content">
  <h2>
    <%= image_tag gravatar_url_for(@correction.solution.account.email), class: "img-circle", width: "40px" %> 
    <%=  assignment_and_author_information(@correction) %> 
  </h2>
  <p class="lead"><%= solution_abridged_info(@correction.solution) %></p>
  <p>
  <a href="mailto:#"><%= @correction.solution.account.email %></a> | 
  <%= t('tag') %> <%= @correction.solution.account.tag %>
  </p>
  <p>
  <%= "#{t('solutions.form.comments')}" %>: 
  <%= @correction.solution.comments %>
  </p>
  <br>
  <% form_for :correction, url(:corrections, :create, @correction.solution.id), :method => :post, :class => 'form-horizontal' do |f| %>
    <%= partial 'corrections/form', :locals => { :f => f } %>
  <% end %>
</div>
